{
  "name": "@form8ion/results-reporter",
  "description": "reporter for the results of the project-scaffolder or lift",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/results-reporter",
  "bugs": "https://github.com/form8ion/results-reporter/issues",
  "homepage": "https://npm.im/@form8ion/results-reporter",
  "runkitExampleFilename": "./example.js",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "scripts": {
    "test": "npm-run-all --print-label build  --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "pregenerate:md": "run-s build",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "lint:peer": "npm ls >/dev/null",
    "prepare": "husky install"
  },
  "files": [
    "example.js",
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "devDependencies": {
    "@babel/register": "7.22.15",
    "@form8ion/babel-preset": "1.6.116",
    "@form8ion/commitlint-config": "1.0.57",
    "@form8ion/eslint-config": "6.0.5",
    "@form8ion/eslint-config-mocha": "3.0.1",
    "@form8ion/remark-lint-preset": "6.0.2",
    "@travi/any": "3.0.0",
    "ban-sensitive-files": "1.10.1",
    "c8": "8.0.1",
    "chai": "4.3.10",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "lockfile-lint": "4.12.1",
    "mocha": "10.2.0",
    "npm-run-all2": "6.1.1",
    "remark-cli": "12.0.0",
    "remark-toc": "9.0.0",
    "remark-usage": "10.0.1",
    "rimraf": "5.0.5",
    "rollup": "4.1.1",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "16.1.0"
  }
}
